<!DOCTYPE html>
<html>
<%- include("../includes/head") %>

<body>
    <header class="container-fluid sticky-top">
      <%- include('../includes/navbar',{page: 'doctorant'}) %>
    </header>

  <main class="container animated fadeIn" id="fader">
    <% if (AL.length>0){ %>
    <div>
      <h2 class="text-justify">Liste des doctorants:</h2>
      <hr>
    </div>
    <div class="row d-flex justify-content-around">
      <% AL.forEach(elem=>{ %>
      <div class="card shadow p-2 m-2 bg-white rounded" style="width: 18rem;">
        <h4 class="card-title text-secondary text-center"><%= elem.nom %></h4>
        <img class="card-img-top" src="<%= elem.profil %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="text-secondary text-center">CNE: <%= elem.cne %></h5>
          <div class="text-center">
            <form action="/secretary/doctorant-detail/<%= elem._id %>" method="GET">
              <button class='btn text-center btn-info' type="submit">Voir details</button>
            </form>
          </div>
        </div>
      </div>

      <% }) } else { %>
      <h1>Pas de doctorants pour l'instant</h1>
      <p>Veillez en ajouter !!</p>
      <% } %>
    </div>

  </main>


</body>

</html>